@page
@model Dajeej.Areas.Admin.Pages.Points.IndexModel
@{
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Points"]
                        </h2>
                    </div>
                    <div class="card-body">
                        @(Html.DevExtreme().DataGrid<Dajeej.Models.Point>()
.DataSource(ds => ds.Mvc()
.Controller("Points")
.LoadAction("Get")
.UpdateAction("Put")
.Key("PointId")
)
.RemoteOperations(true)
.Columns(columns => {
    columns.AddFor(m => m.ForEach).Caption(sharedResource["For Each(KD)"]);
    columns.AddFor(m => m.NumberOfPoints).Caption(sharedResource["Number Of Points"]);
     columns.AddFor(m => m.AmountOfOnePoint).Caption(sharedResource["Cost Of One Point(KD)"]);

}

)

.Editing(e => e.Mode(GridEditMode.Popup)
.Texts(c => c.CancelRowChanges(sharedResource["Cancel"]) .SaveRowChanges(sharedResource["Save"]) .EditRow(sharedResource["Edit"]).AddRow(sharedResource["Add"]).ConfirmDeleteMessage(sharedResource["Are you sure to delete this record ?"]))




.AllowUpdating(true)
.UseIcons(true)


.Popup(p => p
.Title(sharedResource["Points"])
.ShowTitle(true)
.MaxWidth(750)
.RtlEnabled(bool.Parse(sharedResource["ArLang"]))


.Height(250))

)
    .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
        .HeaderFilter(headerFilter => headerFilter.Visible(true))
                            .ShowRowLines(true).ShowColumnLines(true)
                            .RowAlternationEnabled(true)
                            .AllowColumnReordering(true)
                            .ShowColumnLines(true)
                            .ShowBorders(true)
                            .SearchPanel(searchPanel => searchPanel
                            .Visible(true)
                            .Width(240)
                            .Placeholder(sharedResource["SearchTxt"]))
                            .RemoteOperations(true)
                            .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
)

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>