@page
@model Dajeej.Areas.Admin.Pages.HomeSliders.DeleteModel
@{
}
<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h3 style="margin-top:9px; color:#4b49ac"> @sharedResource["Delete"]  @sharedResource["HomeSlider"]</h3>
        <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>

    
    </div>
    <div style="padding-top:20px;padding-left:20px;padding-right:20px">
        <div class="row">
            <div class="col-md-12 col-lg-6 mt-4">
                <h4>@sharedResource["Informations"] </h4>
                <hr />
                  <div class="row">
                                @{
                                    if (Model.slider.CountryId!= 0)
                                    {
                                        <div class="col-md-12 col-lg-6 mt-4">
                                            <h4> @sharedResource["Country"] </h4>
                                            <hr />

                                            <div class="d-flex justify-content-between">
                                                <div>@sharedResource["TlAr"]  </div>
                                                <div> @Model.slider.Country.CountryTLAR </div>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <div>@sharedResource["TlEn"]  </div>
                                                <div> @Model.slider.Country.CountryTLEN </div>
                                            </div>
                                        </div>
                                    }


                                }
                            </div>



                 <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Sort"]  </dt>
                                        <dd class="col-sm-10"> @Model.slider.OrderIndex </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["IsActive"]  </dt>
                                        <dd class="col-sm-10">
                                            @{
                                                if (Model.slider.IsActive==true)
                                                {
                                                    <div>@sharedResource["Active"] </div>
                                                }
                                                else
                                                {
                                                    <div>@sharedResource["Not Active"] </div>
                                                }
                                            }
                                        </dd>
                                    </dl>
                                </div>
                                       
               
                <div class="d-flex justify-content-between">
                    <div>@sharedResource["Picture"]  </div>
                    <div class="Details_img">
                        <img style="border-radius: 13%;" width="250" height="250" class="img-fluid" src="~/Images/Slider/@Model.slider.Pic" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <form method="post">
        <div class="invers">
            @(Html.DevExtreme().Button()
                    .ID("button")
                    .Text(sharedResource["Delete"])
                    .Type(ButtonType.Danger)
                    .UseSubmitBehavior(true)

                    )
        </div>

    </form>
</div>
